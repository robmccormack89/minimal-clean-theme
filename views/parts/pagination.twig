{% if (pagination.next or pagination.prev) %}
  <div data-template="pagination.twig">
    
    <div class="pagination-block uk-hidden">
      <ul class="uk-pagination uk-flex-center">

        {% if posts.pagination.prev %}
          <li>
            <a href="{{posts.pagination.prev.link}}" class="prev {{posts.pagination.prev.link|length ? '' : 'invisible'}}"><i uk-icon="icon: chevron-left"></i> {{ __('Previous Page', 'rmcc-cv-theme') }}</a>
          </li>
        {% endif %}
        {% for page in posts.pagination.pages %}
          <li>
            {% if page.link %}
              <a href="{{page.link}}" class="{{page.class}}">{{page.title}}</a>
            {% else %}
              <span class="{{page.class}}">{{page.title}}</span>
            {% endif %}
          </li>
        {% endfor %}
        {% if posts.pagination.next %}
          <li>
            <a href="{{posts.pagination.next.link}}" class="next {{posts.pagination.next.link|length ? '' : 'invisible'}}">{{ __('Next Page', 'rmcc-cv-theme') }} <i uk-icon="icon: chevron-right"></i></a>
          </li>
        {% endif %}

      </ul>
    </div>
  
    {% if pagination.next %}
      <div class="scroll-loaders">
        <div class="page-load-status">
          <div class="loader-ellips infinite-scroll-request">
            <span class="loader-ellips__dot"></span>
            <span class="loader-ellips__dot"></span>
            <span class="loader-ellips__dot"></span>
            <span class="loader-ellips__dot"></span>
          </div>
          <p class="infinite-scroll-last">{{ __('End of posts', 'rmcc-cv-theme') }}</p>
          <p class="infinite-scroll-error">{{ __('No more posts to load', 'rmcc-cv-theme') }}</p>
        </div>
        <p><button class="view-more-button uk-button uk-button-default uk-align-center">{{ __('Load more', 'rmcc-cv-theme') }}</button></p>
      </div>
      <script>
        var infScroll = new InfiniteScroll( '.archive-posts', {
          path: '.next',
          append: '.item',
          button: '.view-more-button',
          scrollThreshold: false,
          history: false,
          status: '.page-load-status',
          hideNav: '.pagination-block'
        });
      </script>
    {% endif %}
  
  </div>

{% endif %}