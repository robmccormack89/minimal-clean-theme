<article id="post-{{post.ID}}" class="uk-section uk-section-small uk-padding-remove-top item {{ post.class }}">
  <header>
    {% if function('is_sticky', post.id) %}
      <span class="uk-label">{{ __('Featured Article', 'rmcc-cv-theme') }}</span>
    {% endif %}
    <h2 class="uk-margin-remove-adjacent uk-margin-small-top uk-text-bold uk-margin-small-bottom"><a class="uk-link-reset" href="{{post.link}}">{{post.title}}</a></h2>
    <p class="uk-article-meta">{{ __('Written on', 'rmcc-cv-theme') }} {{post.date | date}}. {{ __('Posted in', 'rmcc-cv-theme') }}
      {% for category in post.categories %}
        {% if not loop.last %}
          <a href="{{ category.link }}">{{ category }}</a>,
        {% endif %}
        {% if loop.last %}
          <a href="{{ category.link }}">{{ category }}</a>
        {% endif %}
      {% endfor %}
    </p>
  </header>
  {% if post.get_thumbnail %}
    <figure>
      <a href="{{post.link}}"><img data-src="{{ post.thumbnail.src|resize(800, 300) }}" width="800" height="300" alt="{{ post.thumbnail.alt }}" uk-img></a>
      {% if post.thumbnail.caption %}
        <figcaption class="uk-padding-small uk-text-muted uk-text-center tease-image-caption">{{ post.thumbnail.caption }}</figcaption>
      {% endif %}
    </figure>
  {% endif %}
  <p>{{ post.preview.read_more('') }}</p>
  <a href="{{post.link}}" class="uk-button uk-button-default">{{ __('Read more', 'rmcc-cv-theme') }}</a>
</article>