<!DOCTYPE html>
<html {{site.language_attributes}}>

  <head>
    <meta charset="{{site.charset}}" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    {{ function('wp_head') }}
    
    {% block spec_styles %}
    {% endblock %}
    
  </head>
  
  <body class="{{ body_class }}" data-template="base.twig">
    
    <div id="SiteWrapper" class="site-wrapper">
      {% block header %}
        {% include 'header.twig' %}
      {% endblock %}

      <main role="main" id="MainContent">
        {% block content %}
          <p>{{ __('Sorry, nothing to display here..', 'rmcc-cv-theme') }}</p>
        {% endblock %}
      </main>

      {% block footer %}
        {% include 'footer.twig' %}
      {% endblock %}

    </div>
    
    {{ function('wp_footer') }}
    
    {% block spec_scripts %}
    {% endblock %}
    
  </body>
</html>